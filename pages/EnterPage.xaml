<Page x:Class="DIPLOM.EnterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DIPLOM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EnterPage">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Логин" Grid.Column="0" Grid.Row="0"  Margin="10"  FontSize="24" />
        <TextBox Width="140" Grid.Column="1" Grid.Row="0"  Margin="10" FontSize="24" x:Name="LoginBox"/>
        <TextBlock Text="Пароль" Grid.Column="0" Grid.Row="1"  Margin="10" FontSize="24"/>
        <PasswordBox Width="140" Grid.Column="1" Grid.Row="1"  Margin="10" FontSize="24" x:Name="PasswordBox"/>
        
        <Button Width="130" Content="Войти"  Grid.Row="2" Grid.Column="0" Margin="10" Height="40" FontSize="20" x:Name="EntBut" Click="EntBut_Click" Grid.ColumnSpan="2"/>
        

    </Grid>
</Page>
